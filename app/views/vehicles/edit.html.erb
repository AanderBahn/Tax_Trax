<header>
    <nav class="main-nav">
     <h1 class="screen-title col-md-6 col-md-offset-5">Edit Vehicle</h1>
    </nav>
  </header>

<% if @vehicle.errors.any? %>
  <% @vehicle.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<main>
<div class="col-md-6 col-md-offset-3 isotope-item">
<div class="panel panel-default">
<div class="panel-heading">
</div>
<div class="panel-body">
<%= form_for @vehicle, :html => { :class => "form-horizontal" } do |f| %>

  <!-- Label and input for name -->
  <div class="form-group">
    <%= f.label :car_type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :make_model, placeholder: "Car Make & Model", class: "form-control" %>
    </div>
  </div>
  <br>

  <!-- Label and input for bio -->
  <div class="form-group">
    <%= f.label :year, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :year, placeholder: "Year of the Model", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :starting_odometer, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :starting_odometer, placeholder: "Car's Starting Odometer", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :personal_usage, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :personal_usage, placeholder: "True or False? This car be availbe to  you outside of work?", class: "form-control" %>
    </div>
  </div>

  <br>

  <div class="form-group text-center">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit class: "btn btn-success" %>
    </div>
  </div>
</div>
</div>
</div>
<% end %>
</main>
