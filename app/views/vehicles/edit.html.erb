<header>
    <nav class="main-nav">
      <ul>
        <li class="nav-left">
          <a class ="back" href="/">Back</a>
        </li>
        <li class="nav-center">
          <h1 class="screen-title">
            Edit Vehicle #<%= @vehicle.id %>
          </h1>
        </li>
        <li>
         <a></a>
        </li>
      </ul>
    </nav>
  </header>

<% if @vehicle.errors.any? %>
  <% @vehicle.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_for @vehicle, :html => { :class => "form-horizontal" } do |f| %>

  <!-- Label and input for name -->
  <div class="form-group">
    <%= f.label :make, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :make, placeholder: "Car Manufacturer", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :cmodel, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cmodel, placeholder: "Car Model", class: "form-control" %>
    </div>
  </div>

  <!-- Label and input for bio -->
  <div class="form-group">
    <%= f.label :year, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :year, placeholder: "Year of the Model", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :starting_odometer, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :starting_odometer, placeholder: "Car's Starting Odometer", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :personal_usage, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :personal_usage, placeholder: "Will this car be availbe to you outside of work?", class: "form-control" %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-success" %>
      or
      <a href="/vehicles">Cancel</a>
    </div>
  </div>
<% end %>
