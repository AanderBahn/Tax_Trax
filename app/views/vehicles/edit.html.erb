<header>
    <nav class="main-nav">
     <h1 class="screen-title col-md-6 col-md-offset-5">Edit Vehicle</h1>
    </nav>
  </header>

<% if @vehicle.errors.any? %>
  <% @vehicle.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<main>
<div class="col-md-6 col-md-offset-3 isotope-item">
<div class="panel panel-default">
<div class="panel-heading">
</div>
<div class="panel-body">
<%= form_for @vehicle, :html => { :class => "form-horizontal" } do |f| %>

  <!-- Label and input for name -->
  <div class="form-group">
    <%= f.label :the_make_and_model_of_your_car, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :make_model, placeholder: "Car Type, i.e. Toyota RAV 4", class: "form-control" %>
    </div>
  </div>
  <br>

  <!-- Label and input for bio -->
  <div class="form-group">
    <%= f.label :model_year, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :year, placeholder: "Year of the Model, i.e. 2007", :type => "number", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :odometer_reading_at_work_start_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :starting_odometer, placeholder: "Car's Starting Odometer, i.e. 10000", :type => "number", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :will_you_use_it_outside_of_work?, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.radio_button :personal_usage, true%>
              <%= f.label :personal_usage_true, "Yes it's my personal car." %>
              <%= f.radio_button :personal_usage, false%>
              <%= f.label(:personal_usage_false, "No it's strictly a work car") %>
    <p><i>(Note: If your personal use changes, please wait until the start of new year to change it's status here.)</i></p>
    </div>
  </div>

  <br>

  <div class="form-group text-center">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit class: "btn btn-success" %>
    </div>
  </div>
</div>
</div>
</div>
<% end %>
</main>
