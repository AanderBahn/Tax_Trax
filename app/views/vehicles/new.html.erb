<header>
    <nav class="main-nav">
      <ul>
        <li class="nav-left">
          <a class ="back" href="/vehicles/index">Cancel</a>
        </li>
        <li class="nav-center">
          <h1 class="screen-title">
            Add a new Vehicle
          </h1>
        </li>
        <li class="nav-right"></li>
      </ul>
    </nav>
  </header>

<% if @vehicle.errors.any? %>
  <% @vehicle.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_vehicle" class="form-horizontal">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @vehicle.user_id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Vehicle" class="btn btn-primary">
    </div>
  </div>
</form>
