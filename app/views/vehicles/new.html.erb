<header>
    <nav class="main-nav">
      <ul>
        <li class="nav-left">
          <a class ="back" href="/vehicles">Cancel</a>
        </li>
        <li class="nav-center">
          <h1 class="screen-title">
            Add a new Vehicle
          </h1>
        </li>
        <li class="nav-right"></li>
      </ul>
    </nav>
  </header>

<!-- Validation failure messages -->

<% if @vehicle.errors.any? %>
  <% @vehicle.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Responsive panel example -->
<main>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
      </div>
      <div class="panel-body">
        <%= form_for @vehicle, :html => { :class => "form-horizontal" } do |f| %>

          <!-- Label and input for make and model of the car -->
          <div class="form-group">
            <%= f.label :make_model, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :make_model, placeholder: "Car Make & Model", class: "form-control" %>
            </div>
          </div>

          <!-- Label and input for bio -->
          <div class="form-group">
            <%= f.label :year, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :year, placeholder: "Year of the Model", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :starting_odometer, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :starting_odometer, placeholder: "Car's Starting Odometer", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :personal_usage, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :personal_usage, placeholder: "Will this car be availbe to you outside of work?", class: "form-control" %>
            </div>
          </div>
          <br>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</main>

