<header>
    <nav class="main-nav">
      <ul>
        <li class="nav-left">
          <a class ="back" href="/">Back</a>
        </li>
        <li class="nav-center">
          <h1 class="screen-title">
            Your Trips
          </h1>
        </li>
        <li>
         <a class="nav-right" href="#"></a>
        </li>
      </ul>
    </nav>
  </header>



<main>
<div class="row isotope-container">
<% @trip.each do |trip| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Trips</h3>
      </div>
      <div class="panel-body">
        <dl>

          <dt>Company</dt>
          <dd><%= trip.job.name %></dd>

          <dt>Miles</dd>
          <dd><%= trip.miles %></dd>

          <dt>Vehicle</dd>
          <dd><%= trip.vehicle.make_model %></dd>

          <dt>Starting Odometer</dd>
          <dd><%= trip.starting_odometer %></dd>

          <dt>Ending Odometer</dd>
          <dd><%= trip.ending_odometer %></dd>

          <br>

          <%= link_to 'Edit', "/trips/#{trip.id}/edit" %>
          <%= link_to 'Destroy', "/trips/#{trip.id}", method: :delete %>

        </dl>
        <div class="btn-group btn-group-justified">
        </div>
<% end %>
   </div>
  </div>
 </div>
</div>
</main>
