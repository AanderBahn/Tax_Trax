<header>
    <nav class="main-nav">
      <ul>
        <li class="nav-left">
          <a class ="back" href="/">Back</a>
        </li>
        <li class="nav-center">
          <h1 class="screen-title">
            Your Trips
          </h1>
        </li>
        <li>
         <a class="nav-right" href="#"></a>
        </li>
      </ul>
    </nav>
  </header>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Job</th>
      <th>Shift hours </th>
      <th>Starting odometer</th>
      <th>Ending odometer</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trip.each do |trip| %>
      <tr>
        <td><%= trip.job.user.first_name %></td>
        <td><%= trip.shift_hours %></td>
        <td><%= trip.starting_odometer %></td>
        <td><%= trip.ending_odometer %></td>
        <td>
          <a href="/trips/<%= trip.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/trips/<%= trip.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_trip/<%= trip.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


