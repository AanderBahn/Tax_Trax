  <div id="wrapper">
    <header>
      <nav class="main-nav">
        <ul>
          <li class="nav-left">
            <a href="/trips/new">Back</a>
          </li>
          <li class="nav-center">
            <h1 class="screen-title">
              Trip in progress
            </h1>
          </li>
          <li class="nav-right">
          </li>
        </ul>
      </nav>
    </header>


    <main class="stop-screen">
      <div class="timer-container">
        <p class="timer-caption">Time until reminder</p>
        <h2 class="timer" id="timer"><%= @trip.shift_hours %>:00</h2>
      </div>

      <p>You have not yet entered your trip data.<br>
         Please click below when finished driving.</p>
      <p>
        <a href="/trips/<%= @trip.id %>/edit" class="btn btn-success btn-block">End Trip</a>
      </p>

    </main>
  </div>

  <script type="text/javascript">
    window.onload = function() {
      var tickTack = function() {
        var timer = document.getElementById("timer").innerHTML.split(':'),
            hours = parseInt(timer[0], 10),
            minutes = parseInt(timer[1], 10);

        minutes -= 1;

        if (minutes < 0 && hours != 0) {
          hours -= 1;
          minutes = 59;
        } else if (hours == 0 && minutes <= 0) {
          clearInterval(interval);
        }

        hours = (hours < 10) ? "0" + hours : hours;
        minutes = (minutes < 10) ? "0" + minutes : minutes;

        document.getElementById("timer").innerHTML = (hours + ':' + minutes);
      }

      var interval = setInterval(tickTack, 10);
    };
  </script>
