  <div id="wrapper">
    <header>
      <nav class="main-nav text-center">
       <h2 class="screen-title text-center">Trip in progress</h2>
      </nav>
    </header>


    <main class="stop-screen">
      <div class="col-md-6 col-md-offset-3 isotope-item">
      <div class="panel panel-default">
      <div class="panel-heading text-center">
       <strong class="text-center">Please drive safely. </strong>
      </div>
       <div class="panel-body text-center">
        <p class="timer-caption">Time until reminder</p>
        <h2 class="timer" id="timer"><%= @trip.shift_hours %>:00:00</h2>

      <p>You have not yet entered your trip data.<br>
         Please click below when finished driving.</p>
      <p>
        <%= link_to "End Trip", edit_trip_path(@trip), :class =>"btn btn-success", "data-no-turbolink" => true %>
      </p>
      </div>
     </div>
     </div>
    </main>
  </div>

  <script type="text/javascript">
    window.onload = function() {
      var tickTock = function() {
        var timer = document.getElementById("timer").innerHTML.split(':'),
            hours = parseInt(timer[0], 10),
            minutes = parseInt(timer[1], 10),
            seconds = parseInt(timer[2], 10);

            if (seconds == 0 && minutes == 0 && hours > 0) {
             seconds = 59;
             minutes = 59;
             hours   -= 1;
            } else if (seconds > 0 && minutes > 0) {
              seconds -= 1;
            } else if (seconds == 0 && minutes > 0) {
              seconds = 59;
              minutes -= 1;
            } else if (minutes == 0 && hours > 0) {
              minutes = 59;
              hours -= 1;
            } else {
              hours = 0;
              minutes = 0;
              seconds = 0;
              clearInterval(interval);
            }

        hours = (hours < 10) ? "0" + hours : hours;
        minutes = (minutes < 10) ? "0" + minutes : minutes;
        seconds = (seconds < 10) ? "0" + seconds : seconds;

        document.getElementById("timer").innerHTML = (hours + ":" + minutes + ":" + seconds);
      }

      var interval = setInterval(tickTock, 1000);
    };
  </script>
