<header>
 <nav class="main-nav">
  <h1 class="screen-title col-md-6 col-md-offset-5">Edit Job</h1>
 </nav>
</header>

<!-- Validation failure messages -->

<% if @job.errors.any? %>
  <% @job.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->
<main>
  <div class="col-md-6 col-md-offset-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"></h3>
      </div>
      <div class="panel-body text-center">
       <%= form_for @job, :html => { :class => "form-horizontal" } do |f| %>

          <!-- Label and input for name -->
          <div class="form-group">
            <%= f.label :name, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :name, placeholder: "Company Name", class: "form-control" %>
            </div>
          </div>
          <br>

          <div class="form-group">
            <%= f.label :industry, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :industry, placeholder: "Company Industry", class: "form-control" %>
            </div>
          </div>
          <br>

          <!-- Label and input for bio -->
          <div class="form-group">
            <%= f.label :daily_commute, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :daily_commute, placeholder: "Your daily Commute", class: "form-control" %>
            </div>
          </div>
          <br>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit class: "btn btn-success" %>
            </div>
         </div>
      <% end %>
    </div>
  </div>
 </div>
</main>
