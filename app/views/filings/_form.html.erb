<div class="col-md-6 col-md-offset-3 isotope-item">
<div class="panel panel-default">
<div class="panel-heading">
</div>

<div class="panel-body">
<%= form_for(@filing) do |f| %>
  <% if @filing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@filing.errors.count, "error") %> prohibited this filing from being saved:</h2>

      <ul>
      <% @filing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p><strong>Tax Trax needs a bit more information to complete your tax form.</strong></p>

  <div class="form-group">
    <%= f.label :tax_year %><br>
    <%= f.number_field :for_year, placeholder: "The year you are filing for.", :class => "form-control" %>
  </div>
  <br>

  <div class="form-group">
    <%= f.label :average_daily_commute %><br>
    <%= f.text_field :average_daily_commute, placeholder: "Your best average commute estimate, one way.", :class => "form-control" %>
  </div>
  <br>
  <hr>

  <div class="form-group">
   <h3 class="text-center"><strong>Click the checkboxes below if True</strong></h3>
  </div>

  <div class="form-group">
    <%= f.label :the_vehicle_was_available_for_personal_use_outside_of_work %><br>
    <%= f.check_box :personal_use_off_duty, :class => "form-control" %>
  </div>
  <br>
  <hr>
  <div class="form-group">
    <%= f.label :you_had_another_vehicle_available_your_use %><br>
    <%= f.check_box :another_vehicle_personal, :class => "form-control" %>
  </div>
  <br>
  <hr>
  <div class="form-group">
    <%= f.label :you_have_other_evidence_to_suport_this_claim %><br>
    <%= f.check_box :has_evidence, :class => "form-control"  %>
  </div>
  <br>
  <hr>
  <div class="form-group">
    <%= f.label :the_other_evidence_in_written_form %><br>
    <%= f.check_box :written_evidence %>
  </div>
  <br>
  <hr>
  <div class="actions text-center">
    <%= f.submit %>
  </div>
 </div>
</div>
</div>
<% end %>
