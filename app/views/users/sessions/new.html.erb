<div id="wrapper">
<h2>Log in Porky Pig</h2>

<main>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <fieldset>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :placeholder => "Enter your account email" %>
  </div>
 </fieldset>

 <fieldset>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Enter your password" %>
  </div>
 </fieldset>

  <% if devise_mapping.rememberable? -%>
   <fieldset>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
   </fieldset>
  <% end -%>

  <div class="btn btn-success btn-block">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

      <form action="#">

        <fieldset class="formAction">
          <input
            type="submit"
            value="Sign In"
            class="btn btn-success btn-block" />
        </fieldset>
      </form>
    </main>
  </div>

