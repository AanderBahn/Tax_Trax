<div class="page-header">
  <h1>Edit User #<%= @user.id %></h1>
</div>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_user/<%= @user.id %>" class="form-horizontal">
  <!-- Label and input for car -->
  <div class="form-group">
    <label for="car" class="col-sm-2 control-label">
      Car
    </label>
    <div class="col-sm-10">
      <input type="text" id="car" name="car" placeholder="Car" class="form-control" value="<%= @user.car %>">
    </div>
  </div>

  <!-- Label and input for jobs -->
  <div class="form-group">
    <label for="jobs" class="col-sm-2 control-label">
      Jobs
    </label>
    <div class="col-sm-10">
      <input type="text" id="jobs" name="jobs" placeholder="Jobs" class="form-control" value="<%= @user.jobs %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update User" class="btn btn-primary">
    </div>
  </div>
</form>
