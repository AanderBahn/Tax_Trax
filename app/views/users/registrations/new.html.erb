<h2>Sign Hamburger up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<main>
<div id="wrapper">

 <fieldset>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :placeholder => "Enter your email address" %>
  </div>
 </fieldset>

 <fieldset>
  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => "8 characters minimum" %>
  </div>
 </fieldset>

 <fieldset>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:placeholder => "Confirm Password"  %>
  </div>
 </fieldset>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  <p>Want to know how Tax Trax can start helping you today?</p>
        <a href="#">About</a>
        <p>Want to get a hold of us?</p>
        <a href="#">Contact Us</a>
<% end %>

<%= render "users/shared/links" %>

      <%= form_tag '/create_user', :method => "post", :class => "form-horizontal" do %>

        <fieldset>
         <label for="firstnameC" class="col-sm-2 control-label">
              First Name
         </label>
         <input type="text" id="firstnameC" name="firstnameC" placeholder="Enter your First Name" class="form-control" value="<%= @user.first_name %>">
        </fieldset>

        <fieldset>
         <label for="lastname" class="col-sm-2 control-label">
              Last Name
         </label>
         <input type="text" id="lastnameC" name="lastnameC" placeholder="Enter your Last Name" class="form-control" value="<%= @user.last_name %>">
        </fieldset>

        <fieldset class="formAction">
          <input
            type="submit"
            value="Create Account"
            class="btn btn-success btn-block" />
        </fieldset>
        <% end %>

    </main>
  </div>
