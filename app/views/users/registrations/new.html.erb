<div id="wrapper">
 <h1 class="screen-title text-center">Sign up</h1>
 <p class="text-center"><a class ="back btn btn-info" href="/">Sign In</a></p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

  <div class="">
      <fieldset class="col-md-6 col-md-offset-3">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, :class => 'form-control' %>
      </fieldset>
  </div>

  <div class="form-group">
      <fieldset class="col-md-6 col-md-offset-3">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, :class => 'form-control' %>
      </fieldset>
  </div>

  <div class="form-group">
      <fieldset class="col-md-6 col-md-offset-3">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, :placeholder => "Enter your email address", :class => 'form-control' %>
      </fieldset>
  </div>

  <div class="form-group">
      <fieldset class="col-md-6 col-md-offset-3">
        <%= f.label :phone %>
        <%= f.phone_field :phone, autofocus: true, :placeholder => "Enter your cell phone number", :class => 'form-control' %>
      </fieldset>
  </div>

  <div class="form-group">
      <fieldset class="col-md-6 col-md-offset-3">
      <!--%= f.label :profile_picture %-->
      <!--%= f.file_field :avatar, :class => 'form-control' %-->
      </fieldset>
  </div>

  <div class="form-group">
      <fieldset class="col-md-6 col-md-offset-3">
        <%= f.label :password %>
        <%= f.password_field :password,
              autocomplete: "off",
              :placeholder => "8 characters minimum", :class => 'form-control' %>
      </fieldset>
  </div>

  <div class="form-group">
     <fieldset class="col-md-6 col-md-offset-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation,
            autocomplete: "off",
            :placeholder => "Confirm Password", :class => 'form-control'  %>
     </fieldset>
  </div>

      <fieldset class="formAction col-md-6 col-md-offset-3 text-center">
        <%= f.submit "Sign up", :class => 'btn btn-success submit' %>
      </fieldset>
    <% end %>
  <hr>
  <p class="col-md-6 col-md-offset-3 text-center">Want to know how Tax Trax can start helping you today?</p>
  <a href="#" class="col-md-6 text-center">About Us</a>
  <p class="col-md-6 col-md-offset-3 text-center">Want to get a hold of us?</p>
  <a href="#" class="col-md-6 text-center">Contact Us</a>
</div>




