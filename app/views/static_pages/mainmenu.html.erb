<header class="col-md-8 col-md-offset-2">
 <h2 class="text-center"><%= current_user.first_name.possessive %> Data</h2>
</header>

<div id="statBar" class="col-md-8 col-md-offset-2 table-responsive">
   <% @vehicles.each do |vehicle| %>
    <table class="col-md-5 col-md-offset-2 table">
     <tr>
      <td class="stat"><%= vehicle.trips.count %>&nbsp;<strong>Trips</strong></td>
      <td class="stat"><%= vehicle.total_miless %>&nbsp;<strong>Miles</strong></td>
      <td class="stat"><strong>$</strong>&nbsp;<%= vehicle.rebaite_rate %><%= vehicle.rebaite_rate %></td>
     </tr>
    </table>
   <% end %>
</div>

<% if current_user.sign_in_count == 1 %>
  <div id="triggerModal" class="modalDialog">
   <div>
     <a href="#triggerModal" title="Close" class="close">X</a>
     <h2>Welcome to Tax Trax</h2>
     <ol>
       <li>Add a <%= link_to('vehicle', new_vehicle_path) %>  to your profile. You can add additional vehicles by selecting "Vehicle Info" on the main menu.</li>
       <li>Add your <%= link_to('job', new_job_path) %>  to your profile. You can add additional jobs by selecting "Job Info" on the main menu.</li>
     </ol>
   </div>
  </div>
  <% end %>

<main id="mainmain" class="col-md-8 col-md-offset-2">

<div class="text-center">
 <a id="NewTrip" class="btn btn-default btn-lg" href="/trips/new">+ New Trip</a>
</div>

<div class="btn-group" role="group" id="mainmenuoptions">
  <!--button type="button" class="btn btn-default"><a href="/my_trips" class="btn btn-sm">Driving Log</a></button-->
  <button type="button" class="btn btn-default text-center"><a href="/disclaimer_filing" class="btn btn-sm">Tax Filing</a></button>
</div>

<hr>
 <h2 class="screen-title text-center">Driving Log</h2>
 <div class="mainly text-center" >
  <% @trips.each do |trip| %>
   <dl>
   <div class="col-md-6 col-md-offset-3 isotope-item">
   <div class="panel panel-default">
   <div class="panel-heading">
   </div>
    <dd class="shower"><p><strong><%= trip.miles %></strong>&nbsp;miles</strong>&nbsp;driven for <strong><%= trip.job.name %></strong></p></dd>
    <dd class="shower"><p><strong><%= trip.vehicle.make_model %></strong>&nbsp; saved $<strong><%= %></strong></p></dd>
    <br>

    <%= link_to 'Edit', "/trips/#{trip.id}/edit", :class => 'btn btn-default btn-xs' %>
    <%= link_to 'Destroy', "/trips/#{trip.id}", method: :delete, :class => 'btn btn-default btn-xs' %>
    </div>
    <br>

    </dl>
  <% end %>
 </div>
 </div>
</main>
