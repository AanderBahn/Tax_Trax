<header>
    <nav class="main-nav">
      <ul>
        <li class="nav-left">
          <a><%= link_to "Sign Out", destroy_user_session_path, :method =>"delete" %></a>
          <!--a class ="back" href="#">Sign Out</a-->
        </li>
        <li class="nav-center">
          <h1 class="screen-title">
            Main Menu
          </h1>
        </li>
        <li class="nav-right"></li>
      </ul>
    </nav>
  </header>

  <% if current_user.sign_in_count == 1 %>
  <div id="triggerModal" class="modalDialog">
   <div>
     <a href="#triggerModal" title="Close" class="close">X</a>
     <h2>Welcome to Tax Trax</h2>
     <ol>
       <li>Add a <%= link_to('vehicle', new_vehicle_path) %>  to your profile. You can add additional vehicles by selecting "Vehicle Info" on the main menu.</li>
       <li>Add your <%= link_to('job', new_job_path) %>  to your profile. You can add additional jobs by selecting "Job Info" on the main menu.</li>
     </ol>
   </div>
  </div>
  <% end %>

<main id="mainmain">

<div class="profiling">
 <div class="profilingLft">
   <%= image_tag current_user.avatar.url(:medium), class: "img-rounded" %>
  </div>

  <div class="profilingRt">
  <div class="spam"></div>
  <h2><%= current_user.first_name %></h2>
  <a id="NewTrip" class="btn btn-success btn-block" href="/trips/new">+ New Trip</a>
 </div>
</div>

<div class="spam2"></div>

<div id="profile_vehicle" class="panel panel-default">
 <div class="panel-heading"><h2 class="main-table-title">Vehicles</h2><a class="btn btn-success main-table-add" href="/vehicles/new">+ New Vehicle</a></div>
  <table class="table">
  <thead>
    <tr>
      <th>Make</th>
      <th># of Trips</th>
      <th>Total Miles</th>
      <th></th>
    </tr>
  </thead>
  <% @vehicles.each do |vehicle| %>
  <tbody>
    <tr>
      <td class="VehicTable"><%= link_to "#{vehicle.make_model}", vehicle_url(vehicle) %></td>
      <td class="VehicTable"><%= vehicle.trips.count %></td>
      <td class="VehicTable"><%= vehicle.total_miless %></td>
      <td class="VehicTable"><div class="btn-group">
       <%= link_to "Show", vehicle, class: "btn btn-sm" %>
       <%= link_to "Edit", edit_vehicle_path(vehicle), class: "btn btn-sm" %>
       <%= link_to "Delete", vehicle, method: :delete, class: "btn btn-danger btn-sm" %>
  </div></td>
    </tr>
  </tbody>
   <% end %>
  </table>
 </div>
 <br>


<div id="profile_job" class="panel panel-default">
 <div class="panel-heading"><h2 class="main-table-title">Jobs</h2><a class="btn btn-success main-table-add" href="/jobs/new">+ New Job</a></div>
  <table class="table">
  <thead>
    <tr>
      <th>Company</th>
      <th># of Trips</th>
      <th>Total Miles</th>
      <th></th>
    </tr>
  </thead>
  <% @jobs.each do |job| %>
  <tbody>
    <tr>
      <td class="JobTable"><%= link_to "#{job.name}", job_url(job) %></td>
      <td class="JobTable"><%= job.trips.count %></td>
      <td class="JobTable"><%= job.total_miles %></td>
      <td class="JobTable"><div class="btn-group">
       <%= link_to "Show", job, class: "btn btn-sm" %>
       <%= link_to "Edit", edit_job_path(job), class: "btn btn-sm" %>
       <%= link_to "Delete", job, method: :delete, class: "btn btn-danger btn-sm" %>
  </div></td>
    </tr>
  </tbody>
   <% end %>
  </table>
 </div>

<ul id="mainmenuoptions">
  <li><a href="/my_trips" class="btn btn-sm">Driving Log</a></li>
  <li><a href="/disclaimer_filing" class="btn btn-sm">Tax Filing</a></li>
</ul>
</main>
